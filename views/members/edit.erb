<h1>Edit member's details:</h1>

<form action="/members/<%= @member.id %>" method="post">
<label for="name"></label>
  <input type="text" name="name" id="name" value="<%= @member.name %>">

  <label for="status">Status:</label>
  <select name="status">

          <% if @member.status == "active" %>
            <option value=<%= @member.status %> selected><%= @member.status %></option>
            <option value= "paused">paused</option>
            <option value= "archived">archived</option>
            <% elsif @member.status == "paused"%>
            <option value= "active">active</option>
            <option value=<%= @member.status %> selected><%= @member.status %></option>
            <option value= "archived">archived</option>
            <% else%>
            <option value= "active">active</option>
            <option value= "paused">paused</option>
            <option value="archived" selected>archived</option>
          <% end %>
  </select>

  <label for="membership_id">Membership required:</label>
  <select class="" name="membership_id">
  <% for membership in @memberships %>
      <option value="<%= membership.id %>" <% if @member.get_membership.id == membership.id %>Selected<% end %>><%= membership.name %></option>
  <% end %>
    </select>

  <input class="" type='submit' value="Submit">
</form>
