<% content_for :submenu1 do %>
/memberships/<%= @membership.id %>/edit
<% end %>
<% content_for :submenu1text do %>
Edit
<% end %>
<% content_for :submenu2 do %>
/memberships/<%= @membership.id %>/delete_deactivate
<% end %>
<% if @membership.active == 1 %>
  <% content_for :submenu2text do %>
  Delete | Deactivate
  <% end %>
<% else %>
  <% content_for :submenu2text do %>
  Delete | Reactivate
  <% end %>
<% end %>

<h1>Membership details:</h1>

<ul class = "box_of_squares">
  <li class = "square">
    <p  class="square_main"><%= @membership.name %></p>
    <div class="square_footer">
      <p class="light_text">Price: <%= @membership.price %></p>
      <p class="light_text">Status:
        <% if @membership.active == 1  %>
        Active
        <% else %>
        Deactivated
        <% end %>
      </p>
    </div>
    <div>
      <% if @course_classes.nil? %>
        <h3> No classes with this membership!</h3>
      <% else %>
        <h3> Classes with this membership:</h3>
        <div class="footer_list">
          <% for course_c in @course_classes %>
          <a class="light_text"  href="/venues/<%= course_c.venue_id %>/course_c/<%= course_c.id %>"><%= course_c.name %></a>
          <% end  %>

        </div>
      <% end  %>

    </div>
  </li>
</ul>

<table class="footer_list center">
  <tr class="light_text">
    <th class="light_text">Class Name</th>
  </tr>
  <% for course_c in @course_classes %>
  <tr class="light_text">
    <td class="light_text"><%= course_c.name %></td>
  </tr>
  <% end %>
</table>
