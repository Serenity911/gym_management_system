<% content_for :submenu1 do %>
/venues/<%= @venue.id %>/edit
<% end %>
<% content_for :submenu1text do %>
Edit
<% end %>
<% content_for :submenu2 do %>
/venues/<%= @venue.id %>/delete
<% end %>
<% content_for :submenu2text do %>
Delete
<% end %>

<!-- venue info -->
<h1><%= @venue.name %></h1>
<div class="box_of_squares">
  <div class="square">
    <div class="square_main">Address: </div>
    <div class="square_footer light_text"> <p><%= @venue.address %></p> </div>
  </div>

    <div class="square">
    <div class="square_main">Max n. of classes: </div>
    <div class="square_footer light_text"> <p><%= @venue.max_number_classes %></p> </div>
  </div>
</div>

<!-- venue is full alert -->

<% if @venue.is_full %>
<h2 class="text-alert">This venue is full: you cannot create any more classes</h2>
<p>Maybe it's time to open a new venue?</p>
<% end %>

<br>



<!-- see all classes -->
<h2>Classes:</h2>
<ul class = "box_of_squares">
<% for course_c in @classes %>
  <li class = "square">
    <a  class="square_main" href="/venues/<%= course_c.venue_id %>/course_c/<%= course_c.id %>"><%= course_c.name%></a>
      <div class="square_footer">
        <p class="light_text">Max capacity: <%= course_c.max_capacity%></p>
        <p class="light_text">Membership: <%= course_c.membership_level%></p>
      </div>
  </li>
<% end %>


<!-- create a new class -->
<li class = "square">
  <% if @venue.is_full %>
  <p  class="square_main text-alert" >This venue is full.<br> You cannot create any new class.</p>
  <% else %>
  <a  class="square_main" href="/venues/<%= @venue.id %>/course_c/new">Create new class</a>
  <!-- <div class="square_footer">
    <a  class="light_text" href=""></a>
    <a  class="light_text" href=""></a>
  </div> -->
</li>
<% end %>

</ul>
