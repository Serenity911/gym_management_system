<h1>Edit class's details in venue <%= @venue_id %>:</h1>

<form class="" action="/venues/<%= @venue_id %>/course_c/<%= @class.id %>/update" method="post">
  <label for="class_name">Class Name:</label>
  <input type="text" name="name" id="class_name" value="<%= @class.name %>">

  <label for="max_capacity">Max Capacity:</label>
  <input type="number" min= 1 name="max_capacity" id="max_capacity" value ="<%= @class.max_capacity %>">

  <label for="venue_id">Venue:</label>
  <select class="" name="venue_id">
    <option value="<%= @venue_id %>" Selected><%= @venue_id %></option>
  </select>

<!-- todo make it dynamic -->
  <label for="membership_id">Membership required:</label>
  <select class="" name="membership_id">
    <option value="<%= @class.membership_id %>" <% if @class.membership == "Gold"%>Selected<% end %>>Gold</option>
    <option value="<%= @class.membership_id %>" <% if @class.membership == "Silver"%>Selected<% end %>>Silver</option>
  </select>


  <input class="" type='submit' value="Submit">

</form>
