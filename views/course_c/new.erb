<h1>Add a new class in <%= Venue.find(@venue_id).name %></h1>


<form action="/venues/<%= @venue_id %>/course_c" method="post">
  <label for="name">Name: </label>
  <input type="text" name="name" id="name">

  <label for="max_capacity">Max Capacity: </label>
  <input type="text" min= 1 name="max_capacity" id="max_capacity">

  <label for="membership_id">Membership required:</label>
  <select class="" name="membership_id">
  <% for membership in @memberships %>
      <option value="<%= membership.id %>" ><%= membership.name %></option>
  <% end %>
    </select>
  <input class="" type='submit' value="Add!">
</form>
