<% if @classes == [] %>
<h1>No classes..</h1>
<% else %>
<h1>Here are all the classes for all the venues</h1>

<ul class = "box_of_squares">
  <% for course_c in @classes %>
  <li class = "square">
    <a  class="square_main" href="/venues/<%= course_c.venue_id %>/course_c/<%= course_c.id %>"><%= course_c.name%></a>
    <div class="square_footer">
      <a class="light_text" href="/venues/<%= course_c.venue_id %>/"><%= course_c.venue_name%></a>
    </div>
    <div class="square_footer">
      <p class="light_text">Max capacity: <%= course_c.max_capacity%></p>
      <p class="light_text">Membership: <%= course_c.membership_level%></p>
    </div>
  </li>
  <% end %>

</ul>

<% end %>
